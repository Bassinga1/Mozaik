{% extends 'base-be.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Service</h1>
        <a href="{{ path('app_admin_service_new') }}" class="btn btn-success">New</a>
    </div>

    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                {# <th>Description</th> #}
                <th>Prix</th>
                <th>Active</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.titre }}</td>
                {# <td>{{ service.description }}</td> #}
                <td>{{ service.prix }}</td>
                <td>{{ service.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ service.slug }}</td>
                <td>
                    {{ include('admin_service/_delete_form.html.twig') }}
                    <a href="{{ path('app_admin_service_show', {'id': service.id}) }}" class="btn btn-dark mb-1"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="btn btn-warning"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"><div class="text-start">No data found in the BDD.</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

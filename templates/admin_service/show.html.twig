{% extends 'base-be.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Service</h1>
        <a href="{{ path('app_admin_service_index') }}" class="btn btn-dark btn-sm mb-2">back</a>
    </div>

    <table class="table table-index table-striped table-responsive">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ service.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ service.prix }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ service.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ service.slug }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('app_admin_service_edit', {'id': service.id}) }}" class="btn btn-warning btn-right mb-2"><i class="align-middle" data-feather="edit-2"></i></a>

    {{ include('admin_service/_delete_form.html.twig') }}
{% endblock %}
